<p id="notice"><%= notice %></p>

<h1>Capsules 一覧</h1>
<div class="row">
  <div class="col-sm-12">
    <% @capsules.each do |capsule| %>
      <div class="col-sm-4">
        <%= link_to edit_capsule_path(capsule) do %>
        <div class="thumbnail">
          <%= thumbnail capsule %>
          <div class="caption">
            <h3><%= capsule.title %></h3>
            <p><%= capsule.message %></p>
            <p>
              <%= link_to  capsule, method: :delete, data: { confirm: 'Are you sure?' }, class: ['btn', 'btn-danger'] do %>
                <i class="glyphicon glyphicon-remove"></i>
              <% end %>
            </p>
          </div>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>Dig date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @capsules.each do |capsule| %>
   
      <tr>
        <td><%= capsule.message %></td>
        <td><%= capsule.dig_date %></td>
        <td>
          <% if capsule.pictures.first.present? %>
              <%= image_tag capsule.pictures.first.image.url(:medium) %>
          <% end %>
          
        </td>
        <td><%= link_to 'Show', capsule %></td>
        <td><%= link_to 'Edit', edit_capsule_path(capsule) %></td>
        <td><%= link_to 'Destroy', capsule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New capsule', new_capsule_path %>
