<p id="notice"><%= notice %></p>

<h1>Capsules 一覧</h1>
<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= link_to new_capsule_path, class: ['btn', 'btn-success'], data: { 'turbolinks': false } do  %>
          <i class="glyphicon glyphicon-plus"></i>
          カプセル新規作成
        <% end %>
      </div>
    </div>
    <% @capsules.each do |capsule| %>
      <div class="col-sm-4">
        <%= link_to edit_capsule_path(capsule) do %>
        <div class="thumbnail">
          <%= thumbnail capsule %>
          <div class="caption">
            <h3><%= capsule.title %></h3>
            <p><%= capsule.message %></p>
            <p>
              <%= link_to  capsule, method: :delete, data: { confirm: 'Are you sure?' }, class: ['btn', 'btn-danger'] do %>
                <i class="glyphicon glyphicon-remove"></i>
              <% end %>
            </p>
          </div>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
